<div class="side-bar-header">
  <div class="header-name">
      <%= link_to current_user.name, edit_user_path(current_user) %>
  </div>
  <div class="header-name">
      <%= link_to "トップページにもどる", root_path(current_user) %><br>
      <br>
      <%= link_to "キャラクター作成", "/rooms/#{@room.id}/charas/new", target: :_blank %><br>
      <br>
      <%= link_to "ステータス一覧・ダメージ計算", "/rooms/#{@room.id}/charas/#{current_user.id}", target: :_blank %>
